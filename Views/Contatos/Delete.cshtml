@model webTeste.Models.Contato

@{
    ViewData["Title"] = "Delete";
}
<main class="vh-100 ">
<h1>Delete</h1>

<h3>Tem certeza que deseja excluir o contato?</h3>
<div>
    <h4>Contato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mensagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mensagem)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Contato" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a type="button" class="btn btn-primary" asp-controller="Contatos" asp-action="Index">Voltar</a>
    </form>
</div>
</main>