@model IEnumerable<webTeste.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<main class="vh-100 ">
<h1>Clientes Cadastrados</h1>

<p>
    <a type="button" class="btn btn-primary" asp-controller="Clientes" asp-action="Create">Cadastar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_cliente"><i class="bi bi-pencil-fill" title="editar" style="font-size: 1rem; color: cornflowerblue;"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id_cliente"><i class="bi bi-card-checklist" title="detalhes" style="font-size: 1rem; color: cornflowerblue";></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id_cliente"><i class="bi bi-trash-fill" title="Excluir" style="font-size: 1rem; color: cornflowerblue;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</main>